<%- include('partials/header'); -%>
<h1>Edit the post</h1>

    <form action="/edit/<%= post._id %>" method="post">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle" value="<%= post.title %>">
            <label>Post</label>
            <textarea class="form-control" name="postBody"  cols="30" rows="5"><%= post.content %></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Finish</button>
    </form>


<%- include('partials/footer'); -%>